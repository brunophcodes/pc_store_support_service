<div class="container-md">
  <h3 class="mt-5"> <%= @store.name %> </h3>
  <br>
  <h5> Available categories: </h5>
    <div class="d-flex mt-3" style="width:100%">
      <div class="row">
        <% @store.categories.each do |category| %>
          <div class="card m-2 rounded-card px-0 shadow" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= category.name %></h5>
            </div>
              <p class="text-center">
              </p>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container text-center">
  <%= link_to 'Back', stores_path %>
</div>