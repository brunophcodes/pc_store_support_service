<div style="height:1000px">
  <div class="row" style="height:100%">
    <%= render 'shared/sidebar'%>
    <div class="col-10">
      <h1 class="text-center my-4">Repair Requests</h1>
      <div class="container">
      <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>NÂ°</th>
              <th>Client</th>
              <th>Product</th>
              <th>Details</th>
              <th>Category</th>
              <th>Price</th>
              <th>Status</th>
              <th>Store Name</th>
            </tr>
          </thead>
          <tbody>
            <% @repair_requests.each do | request | %>
              <tr>
                <td><%= request.id %></td>
                <td><%= request.client_email %></td>
                <td><%= request.product_name %></td>
                <td><%= request.repair_description %></td>
                <td><%= request.product_category %></td>
                <td><%= request.repair_price %></td>
                <td><%= request.repair_status %></td>
                <td><%= request.store.name %></td>
                <td><%= link_to 'Show', request %></td>
                <td><%= link_to 'Edit', edit_repair_request_path(request) %></td>
                <td><%= link_to 'Delete', request, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>