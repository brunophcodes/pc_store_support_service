<div class="container-chefs" style="height:1000px">
  <div class="row" style="height:100%">
  <!-- Agregar items al Navbar lateral o Sidebar -->
    <div class="col-2 bg-light p-0 " id="navbar-dashboard ">
      <div class="mt-3 mb-3 text-center"><h4>Dashboard</h4></div>
      <div class="p-4  text-light bg-success rounded font-weight-bold"> <%= current_user.email %> </div>
      <div class="border-bottom "></div>
      <ul class="nav flex-column mt-2">
        <li class="nav-item">
          <%= link_to "Categories", categories_path, class:"nav-link text-dark mt-3" %>
        </li>
        <li class="nav-item">
          <%= link_to "Stores", stores_path, class:"nav-link text-dark mt-3" %>
        </li>
      </ul>
    </div> 
    <div class="col-10">
      <h1 class="text-center">Repair Requests</h1>
      <div class="container">
      <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>NÂ°</th>
              <th>Client</th>
              <th>Product</th>
              <th>Details</th>
              <th>Category</th>
              <th>Price</th>
              <th>Status</th>
              <th>Store Name</th>
            </tr>
          </thead>
          <tbody>
            <% @repair_requests.each do | request | %>
              <tr>
                <td><%= request.id %></td>
                <td><%= request.client_email %></td>
                <td><%= request.product_name %></td>
                <td><%= request.repair_description %></td>
                <td><%= request.product_category %></td>
                <td><%= request.repair_price %></td>
                <td><%= request.repair_status %></td>
                <td><%= request.store.name %></td>
                <td><%= link_to 'Show', request %></td>
                <td><%= link_to 'Edit', edit_repair_request_path(request) %></td>
                <td><%= link_to 'Delete', request, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>