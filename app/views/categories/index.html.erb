<div style="height:1000px">
  <div class="row" style="height:100%">
  <%= render 'shared/sidebar'%>
  <div class="col-10">
    <h5 class="mt-5"> Categories </h5> <%= link_to "Add Category", new_category_path, class: "btn btn-success"%>
      <div class="d-flex mt-3" style="">
        <div class="row">
          <% @categories.each do |category| %>
            <div class="card m-2 rounded-card px-0 shadow" style="width: 18rem;">
              <%= link_to category do%>
              <div class="card-body">
                <h5 class="card-title"><%= category.name %></h5>
              </div>
              <div class="flex flex-column">
                <p> <%= link_to "Edit", edit_category_path(category) , class: 'btn btn-warning' %> </p>
                <p> <%= button_to "Delete", category, data: { turbo_confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger"%> </p>
              </div>
            </div>
            <%end%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="container text-center">
    <%= link_to 'Back', repair_requests_path %>
  </div>
</div>